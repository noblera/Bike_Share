<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.noble.bikeshare.ReserveActivity" >

    <TextView
        android:id="@+id/reserve_location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:text="Bike Station Location" />

    <TextView
        android:id="@+id/bike_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:text="Bike Type" />

    <Button
        android:id="@+id/unlock_bike_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/reserve_more_options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more_options_button" />

</LinearLayout>