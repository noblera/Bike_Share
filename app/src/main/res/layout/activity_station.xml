<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:text="Bike Station Location" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <Button
            android:id="@+id/generic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/generic_button" />

        <View
            android:id="@+id/generic_availability_bar"
            android:layout_width="48dp"
            android:layout_height="24dp" >

        </View>

        <Button
            android:id="@+id/generic_reserve_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Reserve" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <Button
            android:id="@+id/errand_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/errand_button" />

        <View
            android:id="@+id/errand_availability_bar"
            android:layout_width="48dp"
            android:layout_height="24dp" >

        </View>

        <Button
            android:id="@+id/errand_reserve_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Reserve" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <Button
            android:id="@+id/road_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/road_button" />

        <View
            android:id="@+id/road_availability_bar"
            android:layout_width="48dp"
            android:layout_height="24dp" >

        </View>

        <Button
            android:id="@+id/road_reserve_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Reserve"/>

    </LinearLayout>

</LinearLayout>
